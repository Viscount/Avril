      <div class="span9">
          <div id="provinces" style="height: 300px;"> </div>
<div id="genders" style="height: 300px;"> </div>
<script>
Morris.Donut({
  element: 'provinces',
  data: <%= to_morris_data(@provinces) %>
})
Morris.Donut({
  element: 'genders',
  data: <%= to_morris_data(@genders) %>
})
